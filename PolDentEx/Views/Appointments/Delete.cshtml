@model PolDentEx.Models.Appointment

@{
    ViewBag.Title = "Usuwanie";
}

<h2>Usuwanie</h2>

<h3>Jesteś pewny że chcesz to usunąć?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Doktor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Doctor.FirstName) 
            @Html.DisplayFor(model => model.Doctor.LastName)
        </dd>

        <dt>
            Pacjent
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Patient.PatientDetails.FirstName) 
            @Html.DisplayFor(model => model.Patient.PatientDetails.LastName)
        </dd>

        <dt>
            Typ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            Data
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
